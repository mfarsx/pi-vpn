# Pi VPN Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
CLIENT_PORT=3000
CLIENT_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database Configuration (if using a database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pi_vpn
DB_USER=pi_vpn_user
DB_PASSWORD=your-database-password

# VPN Configuration
VPN_INTERFACE=wg0
VPN_PORT=51820
VPN_NETWORK=10.0.0.0/24
VPN_SERVER_IP=10.0.0.1

# Security Configuration
ENABLE_HTTPS=false
SSL_CERT_PATH=/etc/ssl/certs/pi-vpn.crt
SSL_KEY_PATH=/etc/ssl/private/pi-vpn.key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=/var/backups/pi-vpn
BACKUP_RETENTION_DAYS=7

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=9090

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Pi VPN <noreply@pi-vpn.local>

# External Services
EXTERNAL_DNS=8.8.8.8,1.1.1.1
EXTERNAL_NTP=pool.ntp.org

# Development Configuration
DEBUG=false
HOT_RELOAD=true