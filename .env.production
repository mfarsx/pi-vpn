# Pi VPN Environment Configuration for Hosting Platform

# Server Configuration
NODE_ENV=production
PORT=3000
CLIENT_URL=https://pi-vpn.mfarsx.dev

# JWT Configuration
JWT_SECRET=pi-vpn-jwt-secret-key-2024-production-mfarsx-dev-secure

# VPN Configuration
VPN_INTERFACE=wg0
VPN_PORT=51820
VPN_NETWORK=10.0.0.0/24
VPN_SERVER_IP=10.0.0.1

# Security Configuration
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/pi-vpn.crt
SSL_KEY_PATH=/etc/ssl/private/pi-vpn.key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=/var/backups/pi-vpn
BACKUP_RETENTION_DAYS=7

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=9090

# External Services
EXTERNAL_DNS=8.8.8.8,1.1.1.1
EXTERNAL_NTP=pool.ntp.org

# Development Configuration
DEBUG=false
HOT_RELOAD=false